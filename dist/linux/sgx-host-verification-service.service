[Unit]
Description=SGX Host Verification Service

[Service]
Type=simple
User=shvs
Group=shvs
ExecStart=/usr/bin/sgx-host-verification-service run
ExecReload=/bin/kill -s HUP $MAINPID
TimeoutStartSec=0
Restart=on-failure
PermissionsStartOnly=true
RuntimeDirectory=sgx-host-verification-service
RuntimeDirectoryMode=0775

[Install]
WantedBy=multi-user.target
